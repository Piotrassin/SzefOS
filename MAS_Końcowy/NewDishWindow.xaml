<Window x:Class="MAS_Końcowy.NewDishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAS_Końcowy"
        mc:Ignorable="d"
        Background="PapayaWhip"
        Title="DishWindow" Height="450" Width="300">
    <StackPanel Margin="20">
        <Label Margin="0 0 0 20" Content="Stwórz nowe danie" FontSize="20"/>
        
        <Label Content="Nazwa"/>
        <TextBox x:Name="NameTextBox"/>

        <Label Content="Typ"/>
        <TextBox x:Name="DishTypeTextBox"/>

        <Label Content="Zaw. prod. pochodzenia zwierzęcego"/>
        <TextBox x:Name="AnimalConentTextBox"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalAlignment="Left" Content="Zawiera gluten"/>
            <CheckBox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="GlutenTextBox"/>
        </Grid>
        
        
        
        
    </StackPanel>
</Window>
